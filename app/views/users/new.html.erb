<div id="form-container">
  <h2>Enter your information</h2>
  <%= form_with(model: @user, url: users_path) do |form| %>
    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, placeholder: "Enter your first name", class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, placeholder: "Enter your last name", class: "form-control"%>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, placeholder: "Enter your email", class: "form-control"%>
    </div>

    <div class="field">
      <%= form.label :details %>
      <%= form.text_field :details, placeholder: "Enter details...", class: "form-control" %>
    </div>

    <%= form.submit "Submit"%>
  <% end %>
</div>
